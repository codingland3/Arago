<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_event"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:cardCornerRadius="13dp"
        android:background="@drawable/custom_card_item"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/layout_in_cardview_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_cardview"
                android:src="@drawable/handphone"
                android:layout_width="wrap_content"
                android:layout_height="150dp"/>

            <TextView
                android:layout_below="@+id/img_cardview"
                android:id="@+id/tv_title_cardview"
                android:text="Khuyến mãi 50% phí sử dụng dịch vụ"
                android:textColor="@color/darkTextColor"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/tv_title_cardview"
                android:id="@+id/tv_description_cardview"
                android:text="Mừng ra mắt ứng dụng Arago ..."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginBottom="@dimen/maxMargin"
                android:background="@color/cardBackgroundColor" />

            <TextView
                android:id="@+id/tv_more_cardview"
                android:layout_alignBottom="@+id/view_line"
                android:text="Xem chi tiết"
                android:textColor="@color/textIndexColor"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="13dp"
                android:textSize="11dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>